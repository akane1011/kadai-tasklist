<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <p><%= f.label :content, 'タスク' %></p>
  <%= f.text_field :content %>
   
  <p><%= f.label :status, 'ステータス' %></p>
  <%= f.text_field :status %>
  
   <%= f.submit '送信' %>
<% end %>